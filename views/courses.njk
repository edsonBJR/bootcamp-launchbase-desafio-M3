{% extends "layout.njk" %}

{%block content %}
    <section class="grid1">

        {% for item in items %}
            <div class="card" id="{{item.id}}">
                <div class="{{item.id}}">
                    <div>
                        <span>{{item.courseNumber}}</span></div>
                    <img src="{{item.image}}" alt="{{item.id}}">
                    <span class="info">{{item.info}}</span>
                    <span class="price">{{item.price}}</span>
                    <p><strong>{{item.description1}}</strong>{{item.description2}}</p>
                </div>
            </div>
        {% endfor %}
    </section>
    <script src="/scripts.js"></script>
{% endblock %}