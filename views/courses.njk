{% extends "layout.njk" %}

{%block content %}
    <section class="grid1">

        {% for item in items %}
            <div class="card" id="{{item.id}}">
                <div class="{{item.id}}">
                    <div>
                        <span>{{item.courseNumber}}</span></div>
                    <img src="{{item.image}}" alt="{{item.id}}">
                    <p class="descricao"><span>{{item.description01}}</span>{{item.description02}}</p>
                </div>
            </div>
        {% endfor %}
    </section>
<div class="modal-overlay">
    <div class="modal">
        <a class="max">
            <i class="material-icons">maximize</i>
        </a>
        <a class="close-modal">
            <i class="material-icons">close</i>
        </a>
        <div class="modal-content">
            <iframe src="" frameborder="0"></iframe>
        </div>
    </div>
</div>
<script src="scripts.js"></script>
{% endblock %}